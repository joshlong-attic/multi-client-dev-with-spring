<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:padding="10px" xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/load" android:orientation="vertical" android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <EditText android:id="@+id/cid" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:text="@string/load_customer_label" android:id="@+id/customer_load_button"
            android:layout_height="wrap_content" android:layout_width="wrap_content"/>

    <TextView android:text="@string/or" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:paddingTop="20px" android:paddingBottom="20px"/>

    <Button android:id="@+id/new_customer_btn" android:text="@string/new_customer" android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>
