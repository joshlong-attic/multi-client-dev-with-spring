<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        >


    <ui:style xml:id="s">
        .gwt-Label {
            display: inline;
        }

        .customerLookupPanel {
            margin: 10px;
            padding: 10px;
        }
    </ui:style>
    <g:FlowPanel>


        <g:HTMLPanel>
            <div style="margin: 0;">
                <g:TextBox ui:field="customerId" width="50"/>
                <g:Button ui:field="searchCustomerButton"/>
                or
                <g:Button ui:field="createCustomerButton"/>
            </div>
        </g:HTMLPanel>

        <g:HTMLPanel>

            <div style="margin-top: 5px;" id="customerPanelContainer">

                <g:DecoratorPanel>

                    <g:HTMLPanel>
                        <DIV style="margin:10px;">

                            <div>
                                <g:Label ui:field="firstNameLabel"/>
                                <g:TextBox ui:field="firstName"/>
                            </div>
                            <DIV>
                                <g:Label ui:field="lastNameLabel"/>
                                <g:TextBox ui:field="lastName"/>
                            </DIV>
                            <DIV>
                                <g:Button ui:field="updateButton"/>
                                <g:Button ui:field="cancelButton"/>
                            </DIV>
                        </DIV>


                    </g:HTMLPanel>
                </g:DecoratorPanel>

            </div>
        </g:HTMLPanel>
    </g:FlowPanel>
</ui:UiBinder>